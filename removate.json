{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":pinDigests"],
  "labels": ["deps"],
  "docker": {
    "enabled": true
  },
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "ARG\\s+KIWIX_BASE=(?<depName>ghcr\\.io/kiwix/kiwix-tools)(?::(?<currentValue>[^\\s@]+))?(?:@sha256:(?<currentDigest>[a-f0-9]{64}))?"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    }
  ]
}
